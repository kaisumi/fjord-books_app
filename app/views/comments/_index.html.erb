
<h1><%= Comment.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Comment.human_attribute_name(:body) %></th>
      <th><%= Comment.human_attribute_name(:user) %></th>
      <th><%= Comment.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.user.name.blank? ? comment.user.email : comment.user.name %></td>
        <td><%= comment.created_at %></td>
        <% if comment.user_id == current_user.id %>
          <td><%= link_to t('views.common.edit'), edit_comment_path(comment) %></td>
          <td><%= link_to t('views.common.destroy'), comment, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
