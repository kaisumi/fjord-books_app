<h1><%= Follow.human_attribute_name(:follow) %></h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:postal_code) %></th>
      <th><%= User.human_attribute_name(:address) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% unless @follows.nil? %>
      <% @follows.each do |follow| %>
        <tr>
          <th>
            <% if follow.avatar.attached? %>
              <%= image_tag follow.avatar.variant(resize_to_fill: [30, 30])%>
            <% end %>
          </th>
          <td><%= follow.email %></td>
          <td><%= follow.name %></td>
          <td><%= follow.postal_code %></td>
          <td><%= follow.address %></td>
          <td><%= link_to t('views.common.show'), follow %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= paginate @follows unless @follows.nil? %> 

<%= link_to t('views.common.back'), user_path(id: params[:user_id]) %>
